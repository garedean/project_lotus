	display: none;
	width: 240px;
	position: absolute;
	top: 0; 
	left: 50px;
	line-height: 2em;
	cursor: pointer;
	border-radius: 0 5px 8px 0;
	z-index: 3;
}

#nav-menu.collapsed .nav-link:hover ul {
	display: block !important;
}

