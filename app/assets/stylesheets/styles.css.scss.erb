	background-color: #2980B9;
}


#nav-menu .nav-link.active > a,
#nav-menu .nav-link.active span,
#nav-menu .nav-link.active .menu-link {
  color: white;
  box-sizing: border-box;
  background: #2980B9;
}

#nav-menu .nav-link:hover {
  background-color: #D0D5D7;
  text-decoration: none;
}

