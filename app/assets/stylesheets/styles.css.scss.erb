  height: 2px;
  background: #aaa;
  position: relative;
  -webkit-animation-duration: 400ms;
  -webkit-animation-timing-function: ease-in-out;
}

.material-design-hamburger__layer:before, .material-design-hamburger__layer:after {
  display: block;
  width: inherit;
  height: 2px;
  position: absolute;
  background: inherit;
  left: 0;
  content: '';
  -webkit-animation-duration: 400ms;
  -webkit-animation-timing-function: ease-in-out;
}

